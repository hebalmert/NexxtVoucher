@model IEnumerable<NexxtVoucher.Models.ChainCode>

@{
    ViewBag.Title = @Resources.Resource.ChainCode_Intext_Titulo;
}
    <p></p>
    <h2>@Resources.Resource.ChainCode_Intext_Titulo</h2>

<p>
    @*@Html.ActionLink(@Resources.Resource.ButtonNew, "Create", new { }, new { @class="btn btn-primary btn-sm"})*@
</p>
<table class="table table-striped">
    <thead class="thead-light">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Cadena)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Largo)
            </th>
            <th></th>
        </tr>
        </thead>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Cadena)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Largo)
                </td>
                <td>
                    <button title="Editar" class="btn btn-warning btn-sm" onclick="location.href =
                   '@Url.Action("Edit", new { id = item.ChainCodeId})'">
                        <i class="fa fa-pencil-alt"></i>
                    </button>

                    <button title="Detalle" class="btn btn-info btn-sm" onclick="location.href =
                   '@Url.Action("Details", new { id = item.ChainCodeId})'">
                        <i class="fa fa-clipboard-list"></i>
                    </button>

                    @*<button title="Borrar" class="btn btn-danger btn-sm" onclick="location.href =
                                    '@Url.Action("Delete", new { id = item.ChainCodeId})'">
