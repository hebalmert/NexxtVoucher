@model IEnumerable<NexxtVoucher.Models.PlanTicket>

@{
    ViewBag.Title = @Resources.Resource.PlanTicket_Model_Titulo;
}

    <h2>@Resources.Resource.PlanTicket_Model_Titulo</h2>

<p>
    @Html.ActionLink(@Resources.Resource.ButtonNew, "Create", new { }, new { @class="btn btn-primary btn-sm"})
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Plan)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Server.Nombre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TicketTime.TiempoTicket)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SpeedUp.VelocidadUp) / @Html.DisplayNameFor(model => model.SpeedDown.VelocidadDown)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Precio)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MikrotikId)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.Plan)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Server.Nombre)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.TicketTime.TiempoTicket)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.SpeedUp.VelocidadUp) / @Html.DisplayFor(modelItem => item.SpeedDown.VelocidadDown)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Precio)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.MikrotikId)
    </td>
    <td>
        @Html.ActionLink(@Resources.Resource.ButtonEdit, "Edit", new { id = item.PlanTicketId }, new { @class = "btn btn-warning btn-sm" }) |
        @Html.ActionLink(@Resources.Resource.ButtonDetail, "Details", new { id = item.PlanTicketId }, new { @class = "btn btn-info btn-sm" }) |
        @Html.ActionLink(@Resources.Resource.ButtonDelete, "Delete", new { id = item.PlanTicketId }, new { @class = "btn btn-danger btn-sm" })
    </td>
</tr>
}

</table>
