@model IEnumerable<NexxtVoucher.Models.Tax>

@{
    ViewBag.Title = @Resources.Resource.Tax_ViewIndex_Titulo;
}

    <h2>@Resources.Resource.Tax_ViewIndex_Titulo</h2>

<p>
    @Html.ActionLink(@Resources.Resource.ButtonNew, "Create", new { }, new { @class="btn btn-primary btn-sm"})
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Impuesto)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Rate)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Impuesto)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Rate)
        </td>
        <td>
            @Html.ActionLink(@Resources.Resource.ButtonEdit, "Edit", new { id=item.TaxId }, new { @class="btn btn-warning btn-sm"}) |
            @Html.ActionLink(@Resources.Resource.ButtonDetail, "Details", new { id=item.TaxId }, new { @class="btn btn-info btn-sm"}) |
            @Html.ActionLink(@Resources.Resource.ButtonDelete, "Delete", new { id=item.TaxId }, new { @class="btn btn-danger btn-sm"})
        </td>
    </tr>
}

</table>
