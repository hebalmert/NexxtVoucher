@model IEnumerable<NexxtVoucher.Models.Tax>

@{
    ViewBag.Title = @Resources.Resource.Tax_ViewIndex_Titulo;
}
    <p></p>
    <h2>@Resources.Resource.Tax_ViewIndex_Titulo</h2>

    <p>
        <button title="" class="btn btn-primary btn-sm" onclick="location.href = '@Url.Action("Create", new { })'">
            <i class="fa fa-plus"></i>
            @Resources.Resource.ButtonNew
        </button>
    </p>
    <table class="table table-striped">
        <thead class="thead-light">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Impuesto)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Rate)
                </th>
                <th></th>
            </tr>
            </thead>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Impuesto)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Rate)
                    </td>
                    <td>
                        <button title="Editar" class="btn btn-warning btn-sm" onclick="location.href =
                   '@Url.Action("Edit", new { id = item.TaxId})'">
                            <i class="fa fa-pencil-alt"></i>
                        </button>

                        <button title="Detalle" class="btn btn-info btn-sm" onclick="location.href =
                   '@Url.Action("Details", new { id = item.TaxId})'">
                            <i class="fa fa-clipboard-list"></i>
                        </button>

                        <button title="Borrar" class="btn btn-danger btn-sm" onclick="location.href =
                    '@Url.Action("Delete", new { id = item.TaxId})'">
                            <i class="fa fa-trash"></i>
                        </button>
                    </td>
                </tr>
            }

    </table>
