@*@model IEnumerable<NexxtVoucher.Models.City>*@

@model PagedList.IPagedList<NexxtVoucher.Models.City>
@using PagedList.Mvc;

@{
    ViewBag.Title = @Resources.Resource.City_ViewIndex_Titulo1;
}

<h2>@Resources.Resource.City_ViewIndex_Titulo1</h2>

<p>
    @Html.ActionLink(@Resources.Resource.ButtonNew, "Create", new { }, new { @class = "btn btn-primary btn-sm" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.FirstOrDefault().Ciudad)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Ciudad)
            </td>
            <td>
                @Html.ActionLink(@Resources.Resource.ButtonEdit, "Edit", new { id = item.CityId }, new { @class = "btn btn-warning btn-sm" }) |
                @Html.ActionLink(@Resources.Resource.ButtonDetail, "Details", new { id = item.CityId }, new { @class = "btn btn-info btn-sm" }) |
                @Html.ActionLink(@Resources.Resource.ButtonDelete, "Delete", new { id = item.CityId }, new { @class = "btn btn-danger btn-sm" })
            </td>
        </tr>
    }

</table>

Página: @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber), de: @Model.PageCount
@Html.PagedListPager(Model, page => Url.Action("Index", new
{
    page,
    sortOrder =
    ViewBag.CurrentSort,
    currentFilter = ViewBag.CurrentFilter
}))