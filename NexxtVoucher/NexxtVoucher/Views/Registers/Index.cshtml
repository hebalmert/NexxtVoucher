@model IEnumerable<NexxtVoucher.Models.Register>

@{
    ViewBag.Title = @Resources.Resource.Register_ViewIndex_Titulo1;
}
    <p></p>
    <h2>@Resources.Resource.Register_ViewIndex_Titulo1</h2>

<p>
    @*@Html.ActionLink(@Resources.Resource.ButtonNew, "Create", new { }, new { @class="btn btn-primary"})*@
</p>
<table class="table table-striped">
    <thead class="thead-light">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.OrderTickets)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tickets)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.VentaOne)
            </th>
            <th></th>
        </tr>
        </thead>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.OrderTickets)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Tickets)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.VentaOne)
                </td>
                <td>
                    <button title="Editar" class="btn btn-warning btn-sm" onclick="location.href =
                   '@Url.Action("Edit", new { id = item.RegisterId})'">
                        <i class="fa fa-pencil-alt"></i>
                    </button>

                    <button title="Detalle" class="btn btn-info btn-sm" onclick="location.href =
                   '@Url.Action("Details", new { id = item.RegisterId})'">
                        <i class="fa fa-clipboard-list"></i>
                    </button>

                    @*<button title="Borrar" class="btn btn-danger btn-sm" onclick="location.href =
                            '@Url.Action("Delete", new { id = item.RegisterId})'">
                            <i class="fa fa-trash"></i>
                        </button>*@
                </td>

            </tr>
        }

</table>
