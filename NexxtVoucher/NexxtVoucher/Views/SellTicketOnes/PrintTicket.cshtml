@model NexxtVoucher.Models.SellTicketOne

@{
    ViewBag.Title = @Resources.Resource.SellTicket_Model_Titulo;
}

<div class="row">
    <div class="col-md-4">
        <table class="table table-borderless">
            <tr>
                <td width="150">
                    @if (Model != null && !string.IsNullOrEmpty(Model.Company.Logo))
                    {
                        <img src="@Url.Content(Model.Company.Logo)" alt="Image" style="width:100px;height:100px;max-width: 100%; height: auto;" />
                    }
                </td>
                <th>
                    <h2>@Model.Company.Compania</h2>
                    @*<h6>@Model.TipoDocumento:@Model.Rif</h6>*@
                </th>
            <tr />
        </table>
        <div>
            <h4>@Resources.Resource.SellTicket_Model_Titulo</h4>
            <hr />
            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayNameFor(model => model.VentaOne)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.VentaOne)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Date)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Date)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.PlanCategory.Categoria)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.PlanCategory.Categoria)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.PlanTicket.Plan)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.PlanTicket.Plan)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.OrderTicketDetail.Usuario)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.OrderTicketDetail.Usuario)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Precio)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Precio)
                </dd>

            </dl>
        </div>
    </div>
</div>

<p>
    @Html.ActionLink(@Resources.Resource.ButtonDetail, "Details", new { id = Model.SellTicketOneId }, new { @class = "btn btn-success" }) |
    @Html.ActionLink(@Resources.Resource.ButtonPrint, "PrintTicket", new { }, new { @class = "btn btn-primary", onclick = "window.print();" })
</p>

