@model IEnumerable<NexxtVoucher.Models.Server>

@{
    ViewBag.Title = @Resources.Resource.Server_Index_Titulo;
}

    <h2>@Resources.Resource.Server_Index_Titulo</h2>

<p>
    @Html.ActionLink(@Resources.Resource.ButtonNew, "Create", new { }, new { @class="btn btn-primary btn-sm"})
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nombre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Modelo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.City.Ciudad)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Zone.Zona)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.Nombre)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Modelo)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.City.Ciudad)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Zone.Zona)
    </td>
    <td>
        @Html.ActionLink(@Resources.Resource.ButtonEdit, "Edit", new { id = item.ServerId }, new { @class="btn btn-warning btn-sm"}) |
        @Html.ActionLink(@Resources.Resource.ButtonDetail, "Details", new { id = item.ServerId }, new { @class="btn btn-info btn-sm"}) |
        @Html.ActionLink(@Resources.Resource.ButtonDelete, "Delete", new { id = item.ServerId }, new { @class="btn btn-danger btn-sm"})
    </td>
</tr>
}

</table>
