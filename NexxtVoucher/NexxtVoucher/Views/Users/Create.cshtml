@model NexxtVoucher.Models.User

@{
    ViewBag.Title = @Resources.Resource.ViewCreate;
}

<h2>@Resources.Resource.ViewCreate</h2>


@using (Html.BeginForm("Create", "Users", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
