@using NexxtVoucher.Models
@model LoginViewModel
@{
    ViewBag.Title = @Resources.Resource.MenuLogin;
}

<br />
<p></p>
<br />

@*<h2 style="width: 400px; margin-left: auto; margin-right:auto;">@ViewBag.Title.</h2>*@
<div class="row" style="width: 500px; margin-left: auto; margin-right:auto;">
    <div class="col-md-12">
        <div class="card shadow-lg p-3 mb-5 bg-white rounded">
            <div class="card-body">
                <div class="row" style="width: 400px; margin-left: auto; margin-right:auto; ">
                    <img src="@Url.Content("~/Content/Imagen/NexxtLink.png")" alt="Image" style="width:100px;height:100px;max-width: 100%; height: auto;" />

                </div>
                <p>
                    <h2><strong><text style="color:Highlight"> Nexxtplanet Voucher</text></strong> </h2>
                </p>
                <section id="loginForm">
                    @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                    {
                        @Html.AntiForgeryToken()
                        @*<h4>Utilice una cuenta local para iniciar sesión.</h4>*@
                        <hr />
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="form-group">
                            @Html.LabelFor(m => m.Email, new { @class = "col-md-12 control-label, font-weight-bolder, text-dark" })
                            <div class="col-md-12">
                                @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                                @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(m => m.Password, new { @class = "col-md-6 control-label, font-weight-bolder, text-dark" })
                            <div class="col-md-12">
                                @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                                @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <div class="checkbox">
                                    @Html.CheckBoxFor(m => m.RememberMe)
                                    @Html.LabelFor(m => m.RememberMe, new { @class = "text-text-dark" })
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <input type="submit" value="Ingresar" class="btn btn-danger btn-sm" />
                            </div>
                        </div>
                        @*<p>
                    @Html.ActionLink("Registrarse como usuario nuevo", "Register")
                </p>*@
                        @* Habilite esta opción una vez tenga la confirmación de la cuenta habilitada para la funcionalidad de restablecimiento de contraseña
                <p>
                    @Html.ActionLink("¿Ha olvidado su contraseña?", "ForgotPassword")
                </p>*@
                    }
                </section>
            </div>
            @*<div class="col-md-4">
                    <section id="socialLoginForm">
                        @Html.Partial("_ExternalLoginsListPartial", new ExternalLoginListViewModel { ReturnUrl = ViewBag.ReturnUrl })
                    </section>
                </div>*@
        </div>
    </div>
</div>

@*<div style="background-image: url(@Url.Content("~/Content/Imagen/bg.jpg"))"></div>*@

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}